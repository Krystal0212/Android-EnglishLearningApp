<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data/>
    <LinearLayout android:id="@+id/linearMiddleFlashCa"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">
        <ImageView android:id="@+id/imageClose"
            android:layout_gravity="end"
            android:layout_height="@dimen/_36pxh"
            android:layout_marginEnd="@dimen/_41pxh"
            android:layout_marginStart="@dimen/_41pxh"
            android:layout_marginTop="@dimen/_48pxv"
            android:layout_width="@dimen/_36pxh"
            android:scaleType="fitXY" android:src="@drawable/img_close"
            tools:ignore="ContentDescription" tools:src="@drawable/img_close"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardBack"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_245pxv"
            android:layout_marginBottom="@dimen/_20pxv"
            android:layout_marginEnd="@dimen/_33pxh"
            android:layout_marginStart="@dimen/_33pxh"
            android:layout_marginTop="@dimen/_15pxv" android:layout_width="@dimen/_293pxh">
            <View
                android:background="@drawable/rectangle_bg_white_a700_border_yellow_600_radius_10"
                android:id="@+id/vBackCardBack"
                android:layout_gravity="bottom|center"
                android:layout_height="@dimen/_214pxv"
                android:layout_marginEnd="@dimen/_15pxh"
                android:layout_marginStart="@dimen/_15pxh"
                android:layout_marginTop="@dimen/_10pxv" android:layout_width="@dimen/_260pxh"/>
            <LinearLayout android:id="@+id/llCardBack"
                android:layout_gravity="top|start"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10pxv"
                android:layout_width="match_parent"
                android:orientation="vertical" style="@style/groupStylewhite_A700cornerRadius_0">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_marginEnd="@dimen/_25pxh"
                    android:layout_marginStart="@dimen/_25pxh"
                    android:layout_marginTop="@dimen/_17pxv"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtTopicNameBack"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:lineSpacingExtra="@dimen/_8pxh"
                        android:singleLine="true"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="@string/lbl_topic_name"
                        style="@style/txtOpenSansromansemibold20" tools:text="@string/lbl_topic_name"/>
                    <ImageView
                        android:id="@+id/soundIconBack"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/baseline_volume_up_24"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:padding="8dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout >
                <TextView android:ellipsize="end"
                    android:id="@+id/txt_meaning"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_25pxh"
                    android:layout_marginStart="@dimen/_25pxh"
                    android:layout_marginTop="@dimen/_51pxv"
                    android:layout_width="wrap_content"
                    android:lineSpacingExtra="@dimen/_11pxh"
                    android:singleLine="true"
                    android:text="@string/lbl_h_m"
                    style="@style/txtOpenSansromansemibold28" tools:text="@string/lbl_h_m"/>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_28pxv"
                    android:layout_marginEnd="@dimen/_25pxh"
                    android:layout_marginStart="@dimen/_25pxh"
                    android:layout_marginTop="@dimen/_38pxv"
                    android:layout_width="match_parent" android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/llPreviousBack"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.59"
                        android:layout_width="0dp"
                        android:orientation="horizontal" style="@style/groupStyleyellow_600cornerRadius">
                        <ImageView android:id="@+id/imageArrowleft"
                            android:layout_height="@dimen/_9pxh"
                            android:layout_marginBottom="@dimen/_9pxv"
                            android:layout_marginStart="@dimen/_7pxh"
                            android:layout_marginTop="@dimen/_10pxv"
                            android:layout_width="@dimen/_6pxh"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_arrowleft"
                            tools:ignore="ContentDescription" tools:src="@drawable/img_arrowleft"/>
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtPrevious"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_3pxv"
                            android:layout_marginEnd="@dimen/_6pxh"
                            android:layout_marginStart="@dimen/_6pxh"
                            android:layout_marginTop="@dimen/_4pxv"
                            android:layout_weight="0.92"
                            android:layout_width="0dp"
                            android:lineSpacingExtra="@dimen/_6pxh"
                            android:singleLine="true"
                            android:text="@string/lbl_previous"
                            style="@style/txtOpenSansromansemibold16" tools:text="@string/lbl_previous"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llNextBack"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_78pxh"
                        android:layout_weight="0.41"
                        android:layout_width="0dp"
                        android:orientation="horizontal" style="@style/groupStyleyellow_600cornerRadius">
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtNext"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_4pxv"
                            android:layout_marginStart="@dimen/_8pxh"
                            android:layout_marginTop="@dimen/_3pxv"
                            android:layout_weight="0.86"
                            android:layout_width="0dp"
                            android:lineSpacingExtra="@dimen/_6pxh"
                            android:singleLine="true"
                            android:text="@string/lbl_next"
                            style="@style/txtOpenSansromansemibold16" tools:text="@string/lbl_next"/>
                        <ImageView android:id="@+id/imageArrowright"
                            android:layout_height="@dimen/_9pxh"
                            android:layout_marginBottom="@dimen/_9pxv"
                            android:layout_marginEnd="@dimen/_7pxh"
                            android:layout_marginStart="@dimen/_4pxh"
                            android:layout_marginTop="@dimen/_10pxv"
                            android:layout_width="@dimen/_6pxh"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_arrowright"
                            tools:ignore="ContentDescription" tools:src="@drawable/img_arrowright"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>
