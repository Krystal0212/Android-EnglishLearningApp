<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/linearColumnarrowleft"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
    style="@style/groupStylewhite_A700">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:gravity="center"
                android:id="@+id/linearRowarrowleft"
                android:layout_height="wrap_content"
                android:layout_width="@dimen/_337pxh"
                android:layout_marginTop="@dimen/_15pxh"
                android:orientation="horizontal">
                <ImageButton
                    android:background="@drawable/rectangle_bg_deep_orange_200_border_black_900_radius_12"
                    android:id="@+id/btnArrowleft"
                    android:layout_height="@dimen/_35pxh"
                    android:layout_width="@dimen/_35pxh"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:paddingHorizontal="@dimen/_6pxh"
                    android:paddingVertical="@dimen/_6pxv"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_arrowleft_black_900" tools:ignore="ContentDescription"/>
                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/txtLanguage"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4pxv"
                    android:layout_width="wrap_content"
                    android:text="@string/lbl_my_profile"
                    style="@style/txtOpenSansromansemibold24" tools:text="@string/lbl_my_profile"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        <ScrollView android:clipToPadding="false"
            android:fillViewport="true"
            android:id="@+id/scrollViewScrollview"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_13pxv"
            android:layout_weight="1" android:layout_width="match_parent">
            <LinearLayout android:gravity="center_horizontal"
                android:id="@+id/llCard"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="vertical">
                <FrameLayout android:id="@+id/frameStackusername"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="@dimen/_337pxh">
                    <LinearLayout android:id="@+id/linearColumnusername"
                        android:layout_gravity="top|center"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="60dp"
                        android:layout_width="match_parent"
                        android:orientation="vertical" style="@style/groupStylecyan_50cornerRadius_1">
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtUsername"
                            android:layout_gravity="center_horizontal"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_39pxh"
                            android:layout_marginStart="@dimen/_39pxh"
                            android:layout_marginTop="@dimen/_74pxv"
                            android:layout_width="wrap_content"
                            android:lineSpacingExtra="@dimen/_8pxh"
                            android:singleLine="true"
                            android:text="@string/lbl_username"
                            style="@style/txtOpenSansromansemibold20_1" tools:text="@string/lbl_username"/>
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtDisplayname"
                            android:layout_gravity="start"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_45pxh"
                            android:layout_marginStart="@dimen/_25pxh"
                            android:layout_marginTop="@dimen/_8pxv"
                            android:layout_width="wrap_content"
                            android:lineSpacingExtra="@dimen/_6pxh"
                            android:singleLine="true"
                            android:text="@string/lbl_display_name"
                            style="@style/txtOpenSans16" tools:text="@string/lbl_display_name"/>

                        <TextView
                            android:id="@+id/edt_name"
                            style="@style/etSolidRoundedOutline_10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_25pxh"
                            android:layout_marginTop="@dimen/_6pxv"
                            android:layout_marginEnd="@dimen/_25pxh"
                            android:background="@drawable/rectangle_bg_white_a700_border_gray_901_radius_12"
                            android:drawableEnd="@drawable/drawable_img_group_3694"
                            android:drawablePadding="@dimen/_30pxh"
                            android:hint="@string/lbl_username2"
                            android:inputType="text"
                            android:paddingStart="@dimen/_20pxh"
                            android:paddingTop="@dimen/_14pxv"
                            android:paddingEnd="@dimen/_10pxh"
                            android:paddingBottom="@dimen/_14pxv"
                            android:singleLine="true"
                            android:textColorHint="@color/black_900"
                            tools:ignore="Autofill" />

                        <TextView
                            android:id="@+id/txtEmail"
                            style="@style/txtOpenSans16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="@dimen/_25pxh"
                            android:layout_marginTop="@dimen/_10pxv"
                            android:layout_marginEnd="@dimen/_44pxh"
                            android:ellipsize="end"
                            android:lineSpacingExtra="@dimen/_6pxh"
                            android:singleLine="true"
                            android:text="@string/lbl_email"
                            tools:text="@string/lbl_email" />

                        <TextView
                            android:id="@+id/edt_mail"
                            style="@style/etSolidRoundedOutline_10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_25pxh"
                            android:layout_marginTop="@dimen/_8pxv"
                            android:layout_marginEnd="@dimen/_25pxh"
                            android:background="@drawable/rectangle_bg_white_a700_border_gray_901_radius_12"
                            android:drawableEnd="@drawable/drawable_img_group_3695"
                            android:drawablePadding="@dimen/_30pxh"
                            android:ellipsize="end"
                            android:hint="@string/lbl_a_gmail_com"
                            android:inputType="textEmailAddress"
                            android:lineSpacingExtra="@dimen/_6pxh"
                            android:paddingStart="@dimen/_20pxh"
                            android:paddingTop="@dimen/_14pxv"
                            android:paddingEnd="@dimen/_10pxh"
                            android:paddingBottom="@dimen/_14pxv"
                            android:singleLine="true"
                            android:textColorHint="@color/black_900"
                            tools:ignore="Autofill" />

                        <LinearLayout
                            android:id="@+id/password_card"
                            style="@style/groupStyleamber_A100cornerRadius"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50pxh"
                            android:layout_marginStart="@dimen/_39pxh"
                            android:layout_marginTop="@dimen/_46pxv"
                            android:layout_marginEnd="@dimen/_39pxh"
                            android:layout_marginBottom="@dimen/_30pxv"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageVector"
                                android:layout_width="@dimen/_18pxh"
                                android:layout_height="@dimen/_21pxh"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/_15pxh"
                                android:layout_marginEnd="@dimen/_25pxh"
                                android:scaleType="fitXY"
                                android:src="@drawable/img_vector"
                                tools:ignore="ContentDescription"
                                tools:src="@drawable/img_vector" />

                            <TextView
                                android:id="@+id/txtChangePassword"
                                style="@style/txtOpenSansromansemibold12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="@dimen/_45pxh"
                                android:ellipsize="end"
                                android:text="@string/lbl_change_password"
                                tools:text="@string/lbl_change_password" />
                        </LinearLayout>

                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/frameStackrectangle2161"
                        style="@style/groupStylewhite_A700cornerRadius_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|center"
                        android:layout_marginStart="@dimen/_104pxh"
                        android:layout_marginEnd="@dimen/_104pxh">

                        <ImageView
                            android:id="@+id/imageAvatar"
                            android:layout_width="@dimen/_115pxh"
                            android:layout_height="@dimen/_113pxh"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="@dimen/_5pxh"
                            android:layout_marginVertical="@dimen/_5pxv"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_rectangle2161" />
                    </FrameLayout>
                </FrameLayout>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:backgroundTint="@color/blue"
                    android:paddingStart="@dimen/_80pxh"
                    android:paddingTop="@dimen/_10pxh"
                    android:paddingBottom="@dimen/_10pxh"
                    android:paddingEnd="@dimen/_80pxh"
                    android:textSize="@dimen/_20pxh"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/btn_backToProfile"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
