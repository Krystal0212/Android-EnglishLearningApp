<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_24"
            android:id="@+id/btn_back"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/trophy_icon"
            android:layout_marginRight="12dp"
            android:id="@+id/btn_leaderboard"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_more_horiz_24"
            android:id="@+id/btn_more"/>

    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager2"
        android:layout_width="380dp"
        android:layout_height="270dp"
        />

    <me.relex.circleindicator.CircleIndicator3
        android:id="@+id/circle_indicator_3"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="40dp"
        app:ci_drawable="@drawable/bg_indicator_3" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Learn by flash card"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:background="@drawable/background_item_2"
        android:layout_marginTop="20dp"
        android:padding="12dp"
        android:drawableStart="@drawable/flash_card_ic"
        android:drawablePadding="15dp"
        android:id="@+id/btn_FLashcard"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test by multiple choices"
        android:textColor="@color/black"
        android:drawableStart="@drawable/multiple_choices_ic"
        android:textAlignment="textStart"
        android:drawablePadding="15dp"
        android:padding="12dp"
        android:background="@drawable/background_item_2"
        android:layout_marginTop="20dp"
        android:id="@+id/btn_test"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_fill_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawablePadding="15dp"
        android:padding="12dp"
        android:drawableStart="@drawable/fill_word_ic"
        android:textAlignment="textStart"
        android:background="@drawable/background_item_2"
        android:text="Test by typing words"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terms"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded"
        android:id="@+id/recyclerView"/>


</LinearLayout>
</ScrollView>