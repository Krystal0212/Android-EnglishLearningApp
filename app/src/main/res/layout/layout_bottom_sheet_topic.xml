<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="18dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add to folder"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:drawableStart="@drawable/baseline_folder_24"
            android:id="@+id/txt_add_to_folder"
            android:drawablePadding="10dp"/>

        <TextView
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit topic"
            android:textColor="@color/black"
            android:id="@+id/txt_edit_topic"
            android:layout_below="@+id/txt_add_to_folder"
            android:textStyle="bold"
            android:textSize="20sp"
            android:drawableStart="@drawable/baseline_edit_24"
            android:drawablePadding="10dp"/>

        <TextView
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete topic"
            android:textColor="@color/black"
            android:id="@+id/txt_delete_topic"
            android:layout_below="@+id/txt_edit_topic"
            android:textStyle="bold"
            android:textSize="20sp"
            android:drawableStart="@drawable/baseline_delete_24"
            android:drawablePadding="10dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/btn_cancel"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:textSize="16sp"
            android:text="Cancel"/>
    </LinearLayout>

</LinearLayout>