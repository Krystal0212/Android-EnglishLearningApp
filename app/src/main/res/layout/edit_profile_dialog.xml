<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_corner_16"
    android:layout_margin="16dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Type new information"
        android:padding="12dp"
        android:textSize="20dp"
        android:id="@+id/txtTitle"
        android:textColor="@color/black"
        android:background="@drawable/bg_blue_corner_top_leftright_16"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <EditText
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_new_information"
            android:background="@drawable/custom_input"/>


        <LinearLayout
            android:paddingTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel"
                android:textSize="14sp"
                android:layout_marginRight="10dp"
                android:id="@+id/btnCancel"
                android:textColor="@color/black"
                android:background="@drawable/bg_gray_corner_16"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:id="@+id/btnApply"
                android:text="Apply"
                android:textColor="@color/black"
                android:background="@drawable/bg_blue_corner_16"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>