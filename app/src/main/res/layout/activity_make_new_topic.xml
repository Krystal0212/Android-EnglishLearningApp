<?xml version="1.0" encoding="UTF-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:gravity="start"
        android:id="@+id/linearMakeNewTopic"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">
        <androidx.appcompat.widget.Toolbar
            android:gravity="center_horizontal"
            android:id="@+id/toolbarToolbar"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_14pxh"
            android:layout_marginStart="@dimen/_14pxh"
            android:layout_marginTop="@dimen/_16pxv"
            android:layout_width="match_parent" app:contentInsetStart="0dp">
            <LinearLayout android:gravity="start"
                android:id="@+id/linearTitleandsave"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="horizontal">
                <ImageView android:id="@+id/imageImageThree"
                    android:layout_height="@dimen/_30pxh"
                    android:layout_width="@dimen/_30pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_image3"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_image3"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtCreatenewtopi"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_7pxh"
                    android:layout_weight="0.56"
                    android:layout_width="0dp" android:singleLine="true"
                    android:text="@string/msg_create_new_topi"
                    style="@style/txtRobotoRegular21" tools:text="@string/msg_create_new_topi"/>

                <Button
                    android:id="@+id/btnSave"
                    style="@style/btnSolidRoundedRightCorner"
                    android:layout_width="@dimen/_95pxh"
                    android:layout_height="@dimen/_35pxv"
                    android:layout_marginStart="@dimen/_38pxh"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/lbl_save"
                    android:textAllCaps="false"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
                    tools:text="@string/lbl_save" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <ImageView android:id="@+id/imageLandscape"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_186pxh"
            android:layout_marginEnd="@dimen/_14pxh"
            android:layout_marginStart="@dimen/_14pxh"
            android:layout_marginTop="@dimen/_22pxv"
            android:layout_width="@dimen/_328pxh"
            android:scaleType="fitXY"
            android:src="@drawable/img_landscape"/>
        <EditText
            android:background="@drawable/rectangle_bg_white_a700_border_indigo_800_radius_3"
            android:id="@+id/viewTopic"
            android:layout_gravity="center_horizontal"
            android:hint="Insert topic here"
            android:paddingStart="5dp"
            android:layout_height="@dimen/_35pxv"
            android:layout_marginEnd="@dimen/_14pxh"
            android:layout_marginStart="@dimen/_14pxh"
            android:layout_marginTop="@dimen/_16pxv" android:layout_width="@dimen/_332pxh"/>
        <ImageView android:id="@+id/imageZigzag"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_23pxh"
            android:layout_marginEnd="@dimen/_14pxh"
            android:layout_marginStart="@dimen/_14pxh"
            android:layout_marginTop="@dimen/_8pxv"
            android:layout_width="@dimen/_80pxh"
            android:scaleType="fitXY" android:src="@drawable/img_zigzag"
            tools:ignore="ContentDescription" tools:src="@drawable/img_zigzag"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerMakeNewTopic"
            itemSpace="@{@dimen/_9pxh}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_14pxh"
            android:layout_marginTop="@dimen/_18pxv"
            android:layout_marginEnd="@dimen/_14pxh"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:ignore="SpeakableTextPresentCheck"
            tools:itemCount="5"
            tools:listitem="@layout/row_make_new_topic" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/imageAdd"
            android:layout_gravity="end"
            android:layout_height="@dimen/_75pxh"
            android:layout_marginEnd="@dimen/_13pxh"
            android:layout_marginStart="@dimen/_13pxh"
            android:layout_marginTop="@dimen/_14pxv"
            android:layout_width="@dimen/_75pxh"
            android:scaleType="fitXY"
            android:src="@drawable/img_add"/>
    </LinearLayout>
