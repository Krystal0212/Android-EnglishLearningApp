<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_corner_16"
    android:layout_margin="16dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Message"
        android:padding="12dp"
        android:textSize="20dp"
        android:id="@+id/txtTitle"
        android:textColor="@color/black"
        android:background="@drawable/bg_blue_corner_top_leftright_16"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Text"
            android:id="@+id/txt_message"
            android:gravity="center"
            android:textSize="20sp" />


        <LinearLayout
            android:paddingTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Learn all"
                android:textSize="14sp"
                android:layout_marginRight="10dp"
                android:id="@+id/btn_all"
                android:textColor="@color/black"
                android:background="@drawable/bg_green_corner_16"/>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:id="@+id/btn_marked"
                android:text="Learn Marked"
                android:textColor="@color/black"
                android:background="@drawable/bg_blue_corner_16"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>