<?xml version="1.0" encoding="UTF-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        tools:context=".fragment.HomeFragment"
        android:id="@+id/frameHome"
        style="@style/groupStylewhite_A700">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.HomeFragment">

    <!-- TODO: Update blank fragment layout -->



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to  "
            android:fontFamily="@font/salsa"
            android:textSize="20sp"
            android:textColor="@color/gray_700"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quizzme"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/salsaregular"
            android:textSize="30dp"/>
    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:layout_marginTop="500dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:id="@+id/viewPager2"/>


    <me.relex.circleindicator.CircleIndicator3
        android:id="@+id/circle_indicator_3"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/viewPager2"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        app:ci_drawable="@drawable/bg_indicator_3" />
</LinearLayout>

        <View android:background="@color/white_A701"
            android:id="@+id/viewThemeBackground"
            android:layout_gravity="center"
            android:layout_height="@dimen/_640pxh"
            android:layout_marginStart="@dimen/_8pxh" android:layout_width="@dimen/_352pxh"/>
        <LinearLayout android:id="@+id/linearColumnlanguage"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_15pxv"
            android:layout_marginEnd="@dimen/_9pxh"
            android:layout_marginStart="@dimen/_17pxh"
            android:layout_marginTop="@dimen/_7pxv"
            android:layout_width="match_parent" android:orientation="vertical">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarToolbar"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" app:contentInsetStart="0dp">
                <LinearLayout android:id="@+id/linearRowavatar"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" android:orientation="horizontal">
                    <LinearLayout android:id="@+id/linearRowlanguage"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10pxv"
                        android:layout_marginTop="@dimen/_10pxv"
                        android:layout_weight="0.81"
                        android:layout_width="0dp" android:orientation="horizontal">
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtLanguage"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_1pxv"
                            android:layout_weight="0.6"
                            android:layout_width="0dp"
                            android:singleLine="true"
                            android:text="@string/lbl_welcome_back"
                            style="@style/txtRobotoregular15_4" tools:text="@string/lbl_welcome_back"/>
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtTxtUsername"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_1pxv"
                            android:layout_marginStart="@dimen/_3pxh"
                            android:layout_weight="0.4"
                            android:layout_width="0dp"
                            android:singleLine="true"
                            android:text="@string/lbl_username1"
                            style="@style/txtRobotoregular15_1b" tools:text="@string/lbl_username1"/>
