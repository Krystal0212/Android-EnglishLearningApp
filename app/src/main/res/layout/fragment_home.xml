                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginStart="@dimen/_6pxh"
                android:layout_marginTop="@dimen/_15pxv"
                android:layout_width="match_parent"
                android:orientation="vertical"
                style="@style/groupStyleblue_A100cornerRadius">
                <LinearLayout android:gravity="start"
                    android:id="@+id/linearRowrectangletwo"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_17pxh"
                    android:layout_marginStart="@dimen/_17pxh"
                    android:layout_marginTop="@dimen/_14pxv"
                    android:layout_width="match_parent" android:orientation="horizontal">
                    <pl.droidsonroids.gif.GifImageView android:id="@+id/imageRectangleTwo"
                        android:layout_height="@dimen/_45pxh"
                        android:layout_width="@dimen/_45pxh"
                        android:scaleType="centerCrop"
                        android:src="@drawable/star"/>
                    <LinearLayout android:gravity="start"
                        android:id="@+id/linearTimeTitle"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_6pxv"
                        android:layout_marginEnd="@dimen/_27pxh"
                        android:layout_marginStart="@dimen/_10pxh"
                        android:layout_marginTop="@dimen/_6pxv"
                        android:layout_weight="0.81"
                        android:layout_width="0dp" android:orientation="vertical">
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtRecentlyAcesse"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:letterSpacing="0.01"
                            android:lineSpacingExtra="@dimen/_6pxh"
                            android:singleLine="true"
                            android:text="@string/msg_recently_access"
                            style="@style/txtRibeyeregular14" tools:text="@string/msg_recently_access"/>
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtDuration"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10pxh"
                            android:layout_width="wrap_content"
                            android:letterSpacing="0.01"
                            android:lineSpacingExtra="@dimen/_1pxh"
                            android:singleLine="true"
                            android:text="@string/lbl_4_hours_ago"
                            style="@style/txtRighteousregular12" tools:text="@string/lbl_4_hours_ago"/>
                    </LinearLayout>
                </LinearLayout>
                <FrameLayout android:id="@+id/frameImageCaption"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="@dimen/_140pxv"
                    android:layout_marginEnd="@dimen/_17pxh"
                    android:layout_marginStart="@dimen/_17pxh"
                    android:layout_marginTop="@dimen/_12pxv" android:layout_width="@dimen/_270pxh">
                    <ImageView android:id="@+id/imageImageOne"
                        android:layout_gravity="start"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_image"/>
                    <LinearLayout android:id="@+id/linearColumntitle"
                        android:layout_gravity="bottom|start"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_9pxv"
                        android:layout_marginEnd="@dimen/_10pxh"
                        android:layout_marginStart="@dimen/_4pxh"
                        android:layout_marginTop="@dimen/_10pxv"
                        android:layout_width="wrap_content" android:orientation="vertical">
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtTitle"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:lineSpacingExtra="@dimen/_5pxh"
                            android:singleLine="true"
                            android:text="@string/lbl_topic_name"
                            style="@style/txtRobotoregular24_4" tools:text="@string/lbl_topic_name"/>
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtTitleOne"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10pxh"
                            android:layout_marginStart="@dimen/_4pxh"
                            android:layout_marginTop="@dimen/_1pxv"
                            android:layout_width="wrap_content"
                            android:letterSpacing="0.01"
                            android:lineSpacingExtra="@dimen/_3pxh"
                            android:singleLine="true"
                            android:text="@string/lbl_krystald"
                            style="@style/txtRobotoregular16_4" tools:text="@string/lbl_krystald"/>
                    </LinearLayout>
                </FrameLayout>
                <LinearLayout android:id="@+id/linearYourScore"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_17pxh"
                    android:layout_marginStart="@dimen/_17pxh"
                    android:layout_marginTop="@dimen/_3pxv"
                    android:layout_width="match_parent" android:orientation="horizontal">
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtCaption"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_1pxv"
                        android:layout_weight="0.8"
                        android:layout_width="0dp"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="@dimen/_15pxh"
                        android:singleLine="true"
                        android:text="@string/lbl_your_score"
                        style="@style/txtRhodiumLibreregular20" tools:text="@string/lbl_your_score"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtCaptionOne"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_100pxh"
                        android:layout_marginTop="@dimen/_1pxv"
                        android:layout_weight="0.2"
                        android:layout_width="0dp"
                        android:letterSpacing="0.01"
                        android:lineSpacingExtra="@dimen/_15pxh"
                        android:singleLine="true"
                        android:text="@string/lbl_00"
                        style="@style/txtRhodiumLibreregular20_1" tools:text="@string/lbl_00"/>
                </LinearLayout>
                <View android:background="@color/gray_601"
