<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base layer: original drawable -->
    <item>
        <bitmap
            android:src="@drawable/town"
            android:tileMode="disabled" />
    </item>

    <!-- Overlay layer: semi-transparent black -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- 50% transparent black -->
        </shape>
    </item>
</layer-list>